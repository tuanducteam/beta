{
  "name": "blog",
  "version": "1.0.0",
  "description": "A minimal, lightweight and mobile-first starter for creating blazing-fast static blogs",
  "main": "index.html",
  "scripts": {
    "develop": "bundle exec jekyll clean && run-p develop:{webpack,jekyll}",
    "develop:jekyll": "sleep 5 && bundle exec jekyll serve --watch",
    "develop:webpack": "webpack --mode development --watch",
    "build": "run-s build:webpack build:jekyll purgecss",
    "build:jekyll": "JEKYLL_ENV=production bundle exec jekyll build",
    "build:webpack": "webpack --mode production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tuanducteam/blog.git"
  },
  "keywords": [
    "bootstrap",
    "blog",
    "medium"
  ],
  "author": "Tuan Duc Design",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tuanducteam/blog/issues"
  },
  "homepage": "https://github.com/tuanducteam/blog#readme",
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/preset-env": "^7.14.1",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.2.4",
    "cssnano": "^5.0.2",
    "node-sass": "^5.0.0",
    "postcss-loader": "^5.2.0",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^5.36.2",
    "webpack-cli": "^4.6.0"
  }
}
